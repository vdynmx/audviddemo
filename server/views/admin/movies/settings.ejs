  <%- include('../includes/scripts.ejs') %>
  <script type="application/javascript">
  $('input[name="enable_iframely"]').change(function(){
    if($(this).val() == 1){
      $('#id_iframely_api_key').closest('.field').show();
      $('#id_enable_youtube_import_0').closest('.field').hide();
      $('label[for=id_enable_youtube_import_label]').closest('.field').hide();
      $('#id_youtube_api_key').closest('.field').hide();
      $('#id_enable_twitch_import_0').closest('.field').hide();
      $('label[for=id_enable_twitch_import_label]').closest('.field').hide();
      $('#id_twitch_api_key').closest('.field').hide();
      $('#id_enable_facebook_import_0').closest('.field').hide();
      $('label[for=id_enable_facebook_import_label]').closest('.field').hide();
      $('#id_facebook_client_id').closest('.field').hide();
      $('#id_facebook_client_secret').closest('.field').hide();
      $('#id_enable_facebook_import_0').closest('.field').hide();
      $('#id_enable_facebook_import_0').closest('.field').hide();

      $('#id_iframely_disallow_sources').closest('.field').show();
      $('label[for=id_iframely_disallow_sources_label]').closest('.field').show();
    }else{
      $('#id_iframely_api_key').closest('.field').hide();
      $('#id_iframely_disallow_sources').closest('.field').hide();
      $('label[for=id_iframely_disallow_sources_label]').closest('.field').hide();
      $('#id_enable_youtube_import_0').closest('.field').show();
      $('label[for=id_enable_youtube_import_label]').closest('.field').show();
      $('#id_youtube_api_key').closest('.field').show();
      $('#id_enable_twitch_import_0').closest('.field').show();
      $('#label[for=id_enable_twitch_import_label]').closest('.field').show();
      $('#id_twitch_api_key').closest('.field').show();
      $('#id_enable_facebook_import_0').closest('.field').show();

      $('label[for=id_enable_facebook_import_label]').closest('.field').show();
      $('#id_facebook_client_id').closest('.field').show();
      $('#id_facebook_client_secret').closest('.field').show();
      $('#id_enable_facebook_import_0').closest('.field').show();
      $('#id_enable_facebook_import_0').closest('.field').show();
    }
  })
  $('input[name="enable_iframely"]:checked').trigger('change');
  </script>
